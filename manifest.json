{
  "manifest_version": 2,
  "name": "My IFTTT Extension",
  "version": "0.1",
  "browser_action": {  
    "default_icon": "icon.png",  
    "default_popup": "sketch/popup.html"  
  },  
  "content_scripts": [{
    "matches": [
      "https://ifttt.com/*"
    ],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage"
  ]
}